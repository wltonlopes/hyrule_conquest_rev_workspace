<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/sandy_smokeA.dds</texture>
    <blend mode="over"/>

    <constant name="emissionrate" value="25.0"/>
    <uniform name="lifetime" min="3.5" max="7.0"/>

	<uniform name="position.x" min="-10.5" max="10.0"/>
	<uniform name="position.y" min="0.0" max="3.0"/>

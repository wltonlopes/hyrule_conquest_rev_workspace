<?xml version="1.0" encoding="utf-8"?>
<particles>

    <texture>art/textures/particles/ordona_flareA.dds</texture>
    <blend mode="add"/>

    <constant name="emissionrate" value="100.0"/>
    <uniform name="lifetime" min="3.5" max="7.0"/>

	<uniform name="position.x" min="-7.0" max="7.0"/>
	<uniform name="position.y" min="-1.0" max="17.0"/>
    <uniform name="position.z" min="-17.0" max="17.0"/>

    <uniform name="angle" min="-0.3" max="0.3"/>

    <uniform name="velocity.x" min="-0.5" max="0.5"/>
    <uniform name="velocity.y" min="-0.5" max="0.5"/>
    <uniform name="velocity.z" min="-0.5" max="0.5"/>
    <uniform name="velocity.angle" min="-0.1" max="0.1"/>

    <uniform name="size" min="0.5" max="2.0"/>
	
    <uniform name="color.b" min="9.8" max="10.0"/>
    <copy name="color.g" from="color.b"/>
    <copy name="color.r" from="color.b"/>

</particles>
